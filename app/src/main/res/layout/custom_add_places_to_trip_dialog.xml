<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">
    <TextView
        android:layout_width="fill_parent"
        android:paddingLeft="10dp"
        android:textColor="#FFFFFF"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:text="Add to a Trip"
        android:background="#002147"
        android:textSize="18sp"
        android:layout_below="@+id/bottom_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4" />

    <TextView
        android:layout_width="fill_parent"
        android:paddingLeft="10dp"
        android:textColor="#002147"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:text="+ CREATE NEW TRIP"
        android:background="#FFFFFF"
        android:clickable="true"
        android:onClick="loadMode"
        android:textSize="16sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/create_new_trip_textview" />

    <!--<ListView
        android:id="@+id/custom_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
-->
    <android.support.v7.widget.RecyclerView
        android:background="#fff"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_new_trip_textview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>